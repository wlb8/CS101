import csv
from typing import Counter
def month_from_number(number):
    '''12 = December'''
    if number == '01':
        return "January"
    elif number == '02':
        return "February"
    elif number == '03':
        return "March"
    elif number == '04':
        return "April"
    elif number == '05':
        return "May"
    elif number == '06':
        return "June"
    elif number == '07':
        return "July"
    elif number == '08':
        return "August"
    elif number == '09':
        return "September"
    elif number == '10':
        return "October"
    elif number == '11':
        return "November"
    elif number == '12':
        return "December"


def read_in_file(filename):
    lines=[]
    f = open(filename,encoding='utf-8')
    fcsv = csv.reader(f)
    for line in fcsv:
        lines.append(line)
    f.close
    return lines

def create_reported_date_dic(firstlist):
    crimedate={}
    dates=[]
    for x in range(len(firstlist)):
        dates.append(firstlist[x][1])
    for date in dates:
        amount = dates.count(date)
        zipped = zip([date], [amount])
        crimedate.update(zipped)
    del crimedate['Reported_Date']
    return crimedate
def create_reported_month_dic(firstlist):
    crimemonths={}
    dates=[]
    months=[]
    for x in range(len(firstlist)):
        dates.append(firstlist[x][1])
    for date in dates:
        months.append(date[1])
        amount = months.count(date[1])
        zipped = zip([date[1]], [amount])
        crimemonths.update(zipped)
    del crimemonths['e']
    return crimemonths
def create_offense_dic(list):
    crimeamount={}
    crimes=[]
    for x in range(len(list)):
        crimes.append(list[x][7])
    for crime in crimes:
        amount = crimes.count(crime)
        zipped = zip([crime], [amount])
        crimeamount.update(zipped)
    del crimeamount['Offense']
    return crimeamount

